<html>
    <head>
        <style>
            table{
                font-family: Arial, Helvetica, sans-serif;
                border-collapse: collapse;
                width: 100%;
            }

            td, th{
                border: 1px solid #ddd;
                text-align: left;
                padding: 8px;
            }
        </style>
    </head>
    <body>
        <h3 style="text-align: center;">Cafe Management System</h3>
        <table>
            <tr>
                <th>Name: <%= name %></th>
                <th>Email: <%= email %></th>
            </tr>
            <tr>
                <th>Contact Number: <%= contact_number %></th>
                <th>Payment Method: <%= payment_method %></th>
            </tr>
        </table>

        <h3>Product Details</h3>
        <table>
            <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Sub Total</th>
            </tr>
            <% if(product_details.length > 0){ %>
                <% product_details.forEach(product => { %>
                    <tr>
                        <td><%= product.title %></td>
                        <td><%= product.category %></td>
                        <td><%= product.quantity %></td>
                        <td><%= product.price/100 %></td>
                        <td><%= (product.price*product.quantity)/100 %></td>
                    </tr>
                <% }) %>
            <% } %>
        </table>
        <h3>Total: <%= total/100 %></h3>
        <h3>Thank You for visiting. Please come again</h3>
    </body>
</html>